{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/phoenix_lxc_configs.schema.json",
    "title": "Phoenix Hypervisor LXC Configuration",
    "description": "Schema for defining LXC containers and their configurations for the Phoenix Hypervisor",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "nvidia_driver_version": {
            "type": "string",
            "description": "NVIDIA driver version to use for all containers",
            "default": "580.65.06"
        },
        "nvidia_repo_url": {
            "type": "string",
            "description": "NVIDIA repository URL for driver installation",
            "default": "http://developer.download.nvidia.com/compute/cuda/repos/debian12/x86_64/"
        },
        "lxc_configs": {
            "type": "object",
            "patternProperties": {
                "^[0-9]+$": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "memory_mb": {
                            "type": "integer"
                        },
                        "cores": {
                            "type": "integer"
                        },
                        "template": {
                            "type": "string"
                        },
                        "storage_pool": {
                            "type": "string"
                        },
                        "storage_size_gb": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        },
                        "network_config": {
                            "type": "string"
                        },
                        "features": {
                            "type": "string"
                        },
                        "vllm_model": {
                            "type": "string"
                        },
                        "vllm_tensor_parallel_size": {
                            "type": "string"
                        },
                        "vllm_max_model_len": {
                            "type": "string"
                        },
                        "vllm_kv_cache_dtype": {
                            "type": "string"
                        },
                        "vllm_shm_size": {
                            "type": "string"
                        },
                        "vllm_gpu_count": {
                            "type": "string"
                        },
                        "vllm_quantization": {
                            "type": "string"
                        },
                        "vllm_quantization_config_type": {
                            "type": "string"
                        },
                        "vllm_api_port": {
                            "type": "integer"
                        },
                        "setup_script": {
                            "type": "string"
                        },
                        "gpu_assignment": {
                            "type": "string"
                        },
                        "swap": {
                            "type": "integer",
                            "description": "Swap memory size in MB for the container"
                        }
                    },
                    "required": [
                        "name",
                        "memory_mb",
                        "cores",
                        "template",
                        "storage_pool",
                        "storage_size_gb",
                        "network_config",
                        "features"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "lxc_configs"
    ],
    "additionalProperties": false
}